<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"

    android:id="@+id/loginRelative"
    android:background="@color/bg_grey"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/bg_rounded_white"
        android:layout_height="wrap_content"
        android:id="@+id/loginLayout"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/hospitalName"
            android:textColor="@color/black"
            android:padding="5dp"
            android:hint="@string/hosp_name"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:background="@android:color/transparent"
            android:textColorHint="@color/separator"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/hosp_id"
            android:background="@android:color/transparent"
            android:id="@+id/hospId"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="@color/black"
            android:textColorHint="@color/separator"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/hospitalPhone"
            android:textColor="@color/black"
            android:padding="5dp"
            android:hint="@string/hosp_phone"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:background="@android:color/transparent"
            android:textColorHint="@color/separator"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dp"
            android:hint="@string/hosp_address"
            android:background="@android:color/transparent"
            android:id="@+id/hospitalAddress"
            android:textStyle="bold"
            android:fontFamily="@font/arial"
            android:textColor="@color/black"
            android:textColorHint="@color/separator"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_rounded_white"
        android:layout_height="wrap_content"
        android:id="@+id/security_question"
        android:layout_below="@+id/loginLayout"
        android:layout_alignParentStart="true"
        >






        <custom.view.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_marginTop="10dp"
            app:fontname="centralSansBook"
            android:background="@drawable/rounded_button"
            android:id="@+id/btnSubmit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"


            />

    </LinearLayout>
</RelativeLayout>

